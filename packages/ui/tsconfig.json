{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "types": ["jest"],
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/setupTests.ts",
    "src/testUtils.tsx",
    "**/*.test.tsx",
    "lib/**/*"
  ]
}
