{
  "compilerOptions": {
    "target": "es6",
    "outDir": "build",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts?(x)",
    "**/__mocks__/**",
    "/test/**"
  ]
}
